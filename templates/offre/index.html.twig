{% extends 'base.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}
    <h1>Offre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date_depart</th>
                <th>Date_retour</th>
                <th>Prix</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre in offres %}
            <tr>
                <td>{{ offre.id }}</td>
                <td>{{ offre.titre }}</td>
                <td>{{ offre.dateDepart ? offre.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offre.dateRetour ? offre.dateRetour|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ offre.prix }}</td>
                {% if offre.image is defined %}
                    <td>{{ offre.image }}</td>
                {% else %}
                    <td>Not exist</td>
                {% endif %}
                <td>
                    <a href="{{ path('app_offre_show', {'id': offre.id}) }}">show</a>
                    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>
                    <a href="{{ path('app_hotel_index', {'idH': offre.id}) }}">Hotels</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="25">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_offre_new') }}">Create new</a>
{% endblock %}
