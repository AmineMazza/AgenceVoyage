    <a class="button" href="{{ absolute_url(path('confirm', {id: user.id, token: token})) }}">
    Cliquez ici pour activer la réception des newsletters
    {# {{ absolute_url(path('confirm', {id: user.id, token: token})) }} #}
    </a>

    <div class="footer">
      <h3>AmineMazza</h3>
