{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
{# card carousel #}
<div class="carousel carousel-center rounded-box h-[30rem] w-4/5 m-auto space-x-4 pb-10 cursor-pointer">
  {% for offre in offres %}
    {% if offre.image is defined and offre.bcoupCoeur  %}
        <div class="carousel-item bg-gradient-to-t from-gray-100 rounded-lg hover:scale-105 transition duration-500 z-40">
            <div class="w-[18.75rem] h-auto p-3 space-y-2 relative">
                <a href="{{ path('app_offre_show', {'id': offre.id}) }}">
                <div class="bg-blue-600 w-full h-1/2 rounded-xl">
                    <img src="{{ offre.image }}" alt="affiche" class="object-cover bg-blue-600 w-full h-full rounded-xl">
                </div>
                <div class="border-b rounded-b-xl pb-2">
                    <h1 class="text-md font-medium text-justify">{{ offre.titre }}</h1>
                </div>
                <div class="flex text-gray-600 items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.115 5.19l.319 1.913A6 6 0 008.11 10.36L9.75 12l-.387.775c-.217.433-.132.956.21 1.298l1.348 1.348c.21.21.329.497.329.795v1.089c0 .426.24.815.622 1.006l.153.076c.433.217.956.132 1.298-.21l.723-.723a8.7 8.7 0 002.288-4.042 1.087 1.087 0 00-.358-1.099l-1.33-1.108c-.251-.21-.582-.299-.905-.245l-1.17.195a1.125 1.125 0 01-.98-.314l-.295-.295a1.125 1.125 0 010-1.591l.13-.132a1.125 1.125 0 011.3-.21l.603.302a.809.809 0 001.086-1.086L14.25 7.5l1.256-.837a4.5 4.5 0 001.528-1.732l.146-.292M6.115 5.19A9 9 0 1017.18 4.64M6.115 5.19A8.965 8.965 0 0112 3c1.929 0 3.716.607 5.18 1.64" />
                    </svg>
                    : {{ offre.idDestination }} 
                </div>
                <div class="flex items-center text-gray-600 mb-2 justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
                    : {{ offre.dateDepart ? offre.dateDepart|date('Y-m-d') : '-' }} &#160;
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-blue-600"><path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>&#160;{{ offre.dateRetour ? offre.dateRetour|date('Y-m-d ') : '-' }}
                </div>
                <div class="flex items-center justify-center">
                    {% if offre.bhebergement %}
                        <span>Hebergement:</span> <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-emerald-500"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    {% else %}
                        <span>Hebergement:</span> <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-red-600"><path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    {% endif %}
                </div>
                    {% if offre.prixUn is defined  %}
                        <div class="text-lg flex justify-center items-center font-bold text-emerald-700 absolute bottom-2 inset-x-0"><span class="text-gray-500 italic text-sm font-medium mr-2">a partir de:</span> {{ offre.prixUn }} MAD</div>
                    {% endif %}
                </a>   
            </div>
        </div> 
  {% endif %}
  {% endfor %}
</div>

{# filters #}
{# offers list #}
offre
{% endblock %}
