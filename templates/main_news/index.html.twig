{% extends 'base.html.twig' %}

{% block title %}Main Newsletters{% endblock %}

{% block body %}
    {% for message in app.flashes('message') %}
        <div class="p-2 bg-blue-500 mx-80 my-5 text-center items-center text-indigo-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
            <span class="flex rounded-full bg-blue-950 text-white uppercase px-2 py-1 text-xs font-bold mr-3">Newsletters</span>
            <span class="font-semibold mr-2 text-left text-white flex-auto">{{message}}</span>
        </div>
    {% endfor %}

     {% for message in app.flashes('message2') %}
        <div class="p-2 bg-green-500 mx-80 my-5 text-center items-center text-indigo-100 leading-none lg:rounded-full flex lg:inline-flex" role="alert">
            <span class="flex rounded-full bg-blue-950 text-white uppercase px-2 py-1 text-xs font-bold mr-3">Newsletters</span>
            <span class="font-semibold mr-2 text-left text-white flex-auto">{{message}}</span>
        </div>
    {% endfor %}
{% endblock %}
